<div class="form-group">
  <%= form.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= form.text_field :name, class: "form-control", placeholder: 'Enter name' %>
  </div>
</div>

<div class="form-group">
  <%= form.label :users, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= form.select :user_ids, options_from_collection_for_select(User.where(id: { '$ne' => current_user.id } ).only(:id, :name), :id, :name, group.user_ids), {}, class: "form-control", multiple: true %>
